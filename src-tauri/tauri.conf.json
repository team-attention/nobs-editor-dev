{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JustViewer",
  "version": "0.1.0",
  "identifier": "com.eatnug.justviewer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "JustViewer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "alwaysOnTop": false,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "txt"],
        "name": "Markdown Document",
        "role": "Viewer"
      }
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["justviewer"]
      }
    }
  }
}
