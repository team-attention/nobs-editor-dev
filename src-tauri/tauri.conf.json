{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nobs Editor",
  "version": "0.5.0",
  "identifier": "com.eatnug.nobseditor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "txt", "json", "yaml", "yml", "toml", "xml", "log", "ini", "cfg", "conf", "csv"],
        "name": "Text Document",
        "role": "Editor"
      },
      {
        "ext": ["js", "jsx", "ts", "tsx", "mjs", "cjs"],
        "name": "JavaScript/TypeScript",
        "role": "Editor"
      },
      {
        "ext": ["py", "pyw"],
        "name": "Python",
        "role": "Editor"
      },
      {
        "ext": ["css", "scss", "less"],
        "name": "CSS",
        "role": "Editor"
      },
      {
        "ext": ["html", "htm", "vue", "svelte"],
        "name": "HTML",
        "role": "Editor"
      },
      {
        "ext": ["rs"],
        "name": "Rust",
        "role": "Editor"
      },
      {
        "ext": ["c", "h", "cpp", "hpp", "cc", "cxx"],
        "name": "C/C++",
        "role": "Editor"
      },
      {
        "ext": ["go"],
        "name": "Go",
        "role": "Editor"
      },
      {
        "ext": ["sql"],
        "name": "SQL",
        "role": "Editor"
      },
      {
        "ext": ["sh", "bash", "zsh"],
        "name": "Shell Script",
        "role": "Editor"
      }
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["nobseditor"]
      }
    }
  }
}
